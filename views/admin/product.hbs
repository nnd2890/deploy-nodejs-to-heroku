<div class="row">
    <div class="col-sm-6 col-md-4 col-sm-offset-3 col-md-offset-4">
      <div id="success" class="alert alert-success {{#if noMessages}}hidden{{/if}}">
        {{successMsg}}
      </div>
    </div>
</div>

{{!-- Contetn --}}
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="row">
      <a class="btn btn-success pull-right" href="/add-product">Add Product</a>
    </div>
    <hr>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Title</th>
          <th scope="col">Image</th>
          <th scope="col">Price</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          {{#each this}}
            <tr>
              <td class="col-md-5">{{this.title}}</td>
              <td class="col-md-2"><img class="img-responsive productImage-table" src="{{this.imagePath}}" alt="..."></td>
              <td class="col-md-2">${{this.price}}</td>
              <td class="col-md-3">
                <div class="btn-group" role="group" aria-label="...">
                  <a href="/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
                  <a class="btn btn-danger deleteProduct" data-id="{{this._id}}">Delete</a>
                </div>
              </td>
            </tr>
          {{/each}}
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      {{#if (pages> 0)}}
        pagination
      {{/if}}
    </div>
  </div>
</div>
